@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel


<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="Category.Name" class="form-label"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder" class="form-label"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger">Delete Category</button>
        <a asp-page="/categories/index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</form>
