@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
 

<div class="container">
    <div class="d-flex justify-content-between pb-3">
        <h2 class="mb-0">Category List</h2>
        <div>
            <a asp-page="/categories/create" class="btn btn-dark"><i class="bi bi-plus-circle-dotted"></i> Create New Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                       <div>
                            <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square pe-2"></i>Edit</a>
                            <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash3 pe-2"></i>Delete</a>
                       </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>