@model List<Category>

<div class="rounded shadow pb-3 mb-5">
    <div class="py-4 bg-primary rounded-top">
        <h2 class="text-white text-center">Category List</h2>
    </div>
    <div class="container">
        <div class="text-end my-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-dark"><i class="bi bi-plus-circle-dotted"></i> Create New Category</a>
        </div>
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square pe-2"></i>Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash3 pe-2"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

